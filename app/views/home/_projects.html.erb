<div class="container">
  <div class="section">
    <h5>Cool stuff im working on</h5>
    <% @projects.each_slice(3) do |projects_row| %>
      <div class="row center">
        <% projects_row.each do |project| %>
          <div class="col s12 m4 " style = "padding: 0 0.75rem;">
            <div class= "card small indigo lighten-5  ">
                
                    <%= image_tag project.image, class: 'circle', size: "100" %>
                <div class="card-title">
                    <%= link_to project.title, project.url, class: 'indigo-text text-darken-4'%>
                  </div>  
              <div class="card-content">
                  <p><%= project.description %></p>
              </div>
              </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
